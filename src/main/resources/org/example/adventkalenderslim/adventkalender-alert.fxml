<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/alert-background.jpg" />
         </image>
      </ImageView>
      <BorderPane prefHeight="200.0" prefWidth="300.0">
         <top>
            <HBox prefHeight="34.0" prefWidth="288.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="5.0" />
               </BorderPane.margin>
               <children>
                  <Label fx:id="lbAlertTitle" alignment="CENTER" prefHeight="34.0" prefWidth="270.0" text="INFORMATION ALERT" textAlignment="CENTER">
                     <font>
                        <Font name="Gloria Hallelujah" size="17.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="25.0" fitWidth="25.0" onMouseClicked="#close" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@../../../images/exit.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </top>
         <center>
            <Label fx:id="lbAlertText" alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="107.0" prefWidth="186.0" textAlignment="JUSTIFY" wrapText="true" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Gloria Hallelujah" size="12.0" />
               </font></Label>
         </center>
         <left>
            <ImageView fx:id="ivAlertLeft" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="15.0" right="5.0" />
               </BorderPane.margin>
            </ImageView>
         </left>
         <right>
            <ImageView fx:id="ivAlertRight" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="5.0" right="15.0" />
               </BorderPane.margin>
            </ImageView>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
